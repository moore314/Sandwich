<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:gravity="center"
    android:layoutDirection="ltr">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quichePrice"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/blanco"></View>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- quiche types-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right">

                    <TextView
                        android:id="@+id/mushroomQuicheTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="@string/mushroomQuicheCateringIngre"
                        android:padding="5dp"
                        android:clickable="true"
                        android:layout_gravity="right"
                        android:background="@color/trans"
                        android:tag="@string/TAGunchecked"
                        />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/blanco"></View>


                    <TextView
                        android:id="@+id/yamQuicheTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="@string/yamQuicheCateringIngre"
                        android:padding="5dp"
                        android:clickable="true"
                        android:layout_gravity="right"
                        android:background="@color/trans"
                        android:tag="@string/TAGunchecked"
                        />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/blanco"></View>

                    <TextView
                        android:id="@+id/broccoliQuicheTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="@string/broccoliQuicheCateringIngre"
                        android:padding="5dp"
                        android:clickable="true"
                        android:layout_gravity="right"
                        android:background="@color/trans"
                        android:tag="@string/TAGunchecked"
                        />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/blanco"></View>


                    <TextView
                        android:id="@+id/onionQuicheTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="@string/onionQuicheCateringIngre"
                        android:padding="5dp"
                        android:clickable="true"
                        android:layout_gravity="right"
                        android:background="@color/trans"
                        android:tag="@string/TAGunchecked"
                        />


            </LinearLayout>

        </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blanco"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:padding="5dp">


            <Button
                android:id="@+id/proceedDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:backgroundTint="@color/turq"
                android:text="@string/checkPlease"
                android:textColor="@color/blanco"
                android:textSize="20dp"
                android:textStyle="bold"
                />
        </LinearLayout>

    </LinearLayout>






</RelativeLayout>