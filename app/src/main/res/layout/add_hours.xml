<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:layoutDirection="ltr"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background"
        android:padding="1dp">

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:datePickerMode="spinner"
            android:background="@color/gray"
            android:calendarViewShown="false"
            android:scaleY="1"
            android:scaleX="1.2"
            android:layout_gravity="center"
            ></DatePicker>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/turq"></View>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/startHour"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/gray"
            android:layout_marginTop="1dp"
            />


            <TimePicker
                android:id="@+id/startTimePicker1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:timePickerMode="spinner"
                android:scaleY="1"
                android:scaleX="1.5"
                android:layout_gravity="center"
                android:background="@color/gray"
                ></TimePicker>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/turq"></View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/endHour"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/gray"
            android:layout_marginTop="1dp"/>


            <TimePicker
                android:id="@+id/endTimePicker1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:timePickerMode="spinner"
                android:scaleY="1"
                android:scaleX="1.5"
                android:layout_gravity="center"
                android:background="@color/gray"
                ></TimePicker>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@color/gray"
            >

            <Button
                android:id="@+id/cancelUpdtHrs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:backgroundTint="@color/red"
                android:text="@string/cancel"
                android:textColor="@color/blanco"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                />

            <Button
                android:id="@+id/finishUpdtHrs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:backgroundTint="@color/turq"
                android:text="@string/updateHr"
                android:textColor="@color/blanco"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                />


        </LinearLayout>

    </LinearLayout>



    </LinearLayout>








