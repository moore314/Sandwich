<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="watchtower.ayalacashier.StudentOrder"
    android:background="@color/background"
    android:layoutDirection="ltr"
    android:clickable="true"
    android:focusableInTouchMode="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="right"
    android:weightSum="2">


    <EditText
        android:id="@+id/studentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_gravity="right"
        android:text="@string/defaultName"
        android:maxLines="1"
        android:maxLength="30"
        android:gravity="center"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textDirection="rtl"



        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:gravity="right"

        />

</LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:weightSum="4">

        <!-- todo check the button that is close to the current hour-->

        <Button
            android:id="@+id/tenOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:textSize="18dp"
            android:text="@string/timeTen"
            android:tag="@string/timeTen"
            android:onClick="setTime"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/twelveOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:textSize="18dp"
            android:text="@string/timeTwelve"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:tag="@string/timeTwelve"
            android:onClick="setTime"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/oneOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:textSize="18dp"
            android:text="@string/timeOne"
            android:layout_marginRight="5dp"
            android:tag="@string/timeOne"
            android:onClick="setTime"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/threeOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:textSize="18dp"
            android:text="@string/timeThree"
            android:tag="@string/timeThree"
            android:onClick="setTime"
            android:layout_weight="1"/>

    </LinearLayout>


        <View

            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/turq"
            android:layout_marginBottom="10dp"></View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        >

        <ImageButton
            android:id="@+id/muesliButton"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@drawable/fruit1"
            android:tag="@string/muesli"
            android:textSize="18dp"
            android:textStyle="bold"
            android:onClick="fruitMeusli"
            android:clickable="true"
            >
        </ImageButton>

        <ImageButton
            android:id="@+id/hotsButton"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@drawable/pasta"
            android:tag="@string/hots"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:onClick="hots"
            android:clickable="true"
            ></ImageButton>




        <ImageButton
            android:id="@+id/saladButton"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@drawable/salad"
            android:tag="@string/generalSalad"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:onClick="salads"
            android:clickable="true"

            >
        </ImageButton>

        <ImageButton
            android:id="@+id/sandwichButton"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@drawable/sandwich1"
            android:tag="@string/sandwich"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:onClick="sandwiches"
            android:clickable="true"
            >
        </ImageButton>

    </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/turq"
            android:layout_marginBottom="5dp"></View>


        <!--
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp">

        <Button
            android:id="@+id/hotsButton"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="@string/hots"
            android:background="@drawable/shape"
            android:tag="@string/hots"
            android:layout_marginRight="5dp"
            android:textSize="18dp"
