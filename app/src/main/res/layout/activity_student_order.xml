    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/shape"
        android:hint="@string/notes"
        android:textSize="18dp"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        android:textColorHint="@color/turq"
        android:layout_marginBottom="10dp"
        />


        <view
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/turq"
            android:layout_marginBottom="20dp"></view>

        <!-- orderDetail -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_marginBottom="30dp"
            >

            <!-- no x for hour, just make hour button gray(or turq) when chosen  -->

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:drawable/ic_menu_close_clear_cancel"
                android:backgroundTint="@color/red"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            >

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:drawable/ic_menu_close_clear_cancel"
                android:backgroundTint="@color/red"/>



        </LinearLayout>


    </LinearLayout>


    <!-- end &  cancel -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/cancelCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:backgroundTint="@color/red"
            android:text="@string/cancel"
            android:textColor="@color/blanco"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="cancel"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            />

        <Button
            android:id="@+id/check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:backgroundTint="@color/turq"
            android:text="@string/checkPlease"
            android:textColor="@color/blanco"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="check"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            />


    </LinearLayout>


</RelativeLayout>
