<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:gravity="center"
    android:layoutDirection="ltr"
    android:layout_weight="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <Button
            android:id="@+id/saladButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/shape"
            android:layout_marginBottom="5dp"
            android:text="@string/saladBase"
            android:textStyle="bold"
            android:tag="@string/saladBase"
            android:onClick="chooseItem"
            android:clickable="true"
            android:hint="@string/no_hint"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="4"
            >




            <Button
                android:id="@+id/saladAdditionBuutton"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/shape"
                android:layout_marginLeft="2dp"
                android:text="@string/saladAddition"
                android:textStyle="bold"
                android:tag="@string/saladAddition"
                android:onClick="chooseItem"
                android:clickable="true"
                android:hint="@string/salad_hint"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/breadButton"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/shape"
                android:layout_marginLeft="2dp"
                android:text="@string/bread"
                android:textStyle="bold"
                android:tag="@string/bread"
                android:onClick="chooseItem"
                android:clickable="true"
                android:hint="@string/bread"
                android:layout_weight="1"/>

        </LinearLayout>





        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:backgroundTint="@color/red"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="@color/blanco"
            android:text="@string/cancel"
            android:textStyle="bold"
            android:onClick="cancel"/>

    </LinearLayout>

</LinearLayout>