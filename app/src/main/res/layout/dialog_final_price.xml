<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:gravity="center"
    android:layoutDirection="ltr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="@string/choosePaymentMethod"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/blanco"></View>

        <LinearLayout
            android:id="@+id/paypalLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_contour"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:tag="@string/TAGunchecked">

            <TextView
                android:id="@+id/paypalTextView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="@string/paypalPayement"
                android:gravity="center"
                android:layout_gravity="center" />


            <TextView
                android:id="@+id/paypalTextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1035.2 NIS"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/blanco"></View>

        <LinearLayout
            android:id="@+id/LinearLayoutCash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_contour"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:tag="@string/TAGunchecked"
            >

            <TextView
                android:id="@+id/cashTextView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="@string/cashPayement"
                android:gravity="center"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/cashTextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1000.0 NIS"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/blanco"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            >

            <Button
                android:id="@+id/cancelCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:backgroundTint="@color/red"
                android:text="@string/cancel"
                android:textColor="@color/blanco"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginRight="2dp"

                />

            <Button
                android:id="@+id/check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:backgroundTint="@color/turq"
                android:text="@string/checkPlease"
                android:textColor="@color/blanco"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>