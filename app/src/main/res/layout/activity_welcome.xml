    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">



        <RelativeLayout
            android:layout_width="210dp"
            android:layout_height="210dp">


            <io.netopen.hotbitmapgg.library.view.RingProgressBar
                android:id="@+id/progressBar"
                android:layout_width="210dp"
                android:layout_height="210dp"
                app:max="100"
                app:ringColor="@color/red"
                app:ringProgressColor="@color/turq"
                app:ringWidth="5dp"
                android:layout_centerInParent="true"
                app:style="STROKE"
                app:textIsShow="false" />

            <ImageButton
                android:id="@+id/logo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/translogo"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                />

        </RelativeLayout>


        <!-- Both will be visible only the first time opening the app-->
        <EditText
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="@string/employee_name"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="@color/turq"
            android:visibility="visible"
            android:maxLength="18"
            android:maxLines="1"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="@string/password"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="@color/turq"
            android:visibility="visible"
            android:maxLength="18"
            android:maxLines="1"
            android:inputType="textPassword"/>

        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/tick"
            android:layout_gravity="center"
            android:onClick="next"
            android:tag="login"
            />



    </LinearLayout>






</RelativeLayout>
